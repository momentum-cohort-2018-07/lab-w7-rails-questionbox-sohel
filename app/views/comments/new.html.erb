<h1 class='col-md-6 offset-md-3 pb-3'>Create a Reply</h1>

<div class='form-signin col-md-6 offset-md-3'>
        <%= form_with url: post_comments_path, scope: "comment", local:true do |form| %>
           
           <div class="form-group"> 
            <%= form.label :reply %>
            <%= form.text_area :reply, :class => "form-control-lg" %>
            </div>
            <div class="form-group">
            <%= form.hidden_field :user_id, :value =>current_user.id %>
            <%= form.hidden_field :post_id, :value => @post.id %>
            </div>
            
            <%= form.submit %>
        <% end %>

