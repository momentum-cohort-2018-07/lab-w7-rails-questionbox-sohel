<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="localhost:3000">QuestionBox</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="localhost:3000">Home</a></li>
