<h1 class='h3 mt-5 mb-3 font-weight-normal text-center'><%= @user.username %> </h1>

<div>
<%= link_to 'Back', root_path %>
</div>

<div>
<% @posts.each do |post| %>
    <div class="card border-secondary text-center" style="width: 30rem;">
        <div class="card-body">
          <h3 class="card-title">
          <%= post.question %>
          </h3>
        </div>
          <p class="card-text">
          <%= post.body %>
          </p>
          <p class="card-text">
          <%= link_to 'Show', post_path(post) %>
          </p>
  <% end %>
      
</div>



