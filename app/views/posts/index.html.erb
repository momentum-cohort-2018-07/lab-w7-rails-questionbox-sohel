<div class="jumbotron"><h1>Welcome to Forum</h1></div>

<div>
    <% if !current_user %>
    <div><%= link_to "Login", new_session_path %></div>
    <div><%= link_to "Register Account", api_user_path %></div>
    <% else %>
    <%= link_to "Log Out", session_path, method: :delete %>
    <% end %>
</div>
<div>
<%= link_to 'Ask a new question', new_post_path %>
</div>
<%= flash[:notice] %>
<div class='pt-3'>
<%= paginate @posts %>
<%= page_entries_info @posts %>
</div>

<div>
  
  <% @posts.each do |post| %>
    <div class="card border-secondary text-center" style="width: 30rem;">
        <div class="card-body">
          <h3 class="card-title">
          <%= post.question %>
          </h3>
        </div>
          <p class="card-text">
          <%= Redcarpet::Markdown.new(Redcarpet::Render::HTML).render(post.body).html_safe %>
          </p>
          <p class="card-text">
          <%= link_to User.find(post.user_id).username, user_path(id: post.user_id)  %>
          </p>
          <p class="card-text">
          <%= link_to 'Show', post_path(post) %>
          </p>
  <% end %>
        </div>
    </div>
</div>