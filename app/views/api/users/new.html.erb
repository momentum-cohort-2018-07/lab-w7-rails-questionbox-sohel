<h1 class='h3 mt-5 mb-3 font-weight-normal text-center'>Sign Up</h1>


<%= form_with(model: @user, local: true, :html => {:class => 'form-signin col-md-6 offset-md-3'}) do |form| %>
  

  <div class="form-group">
    <%= form.label :username %>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">â‡—</div>
      </div>
      <%= form.label :username %>
      <%= form.text_field :username, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control', :placeholder => 'password' %>
  </div>


  <%= form.submit "Create my Account", :class => "btn btn-lg btn-info btn-block" %>
  
<% end %>
