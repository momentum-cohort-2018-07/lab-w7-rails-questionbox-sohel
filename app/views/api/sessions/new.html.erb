<nav class="d-flex flex-column justify-content-centerjustify-content-lg-between flex-lg-row navbar fixed-top navbar-dark bg-info">
  
  <div class="btn-group">
    <% if !current_user %>
      <%= link_to "Sign Up", new_api_user_path, :class => 'btn btn-outline-light' %>
    <% end %>
  </div>
</nav>

<h1 class='h3 mb-3 font-weight-normal text-center mt-5'>Log In</h1>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
<% if flash[:error_message] %>
  <div class="alert alert-danger"><%= flash[:error_message] %></div>
<% end %>

<%= form_with(url: api_session_path, :html => {:class => 'form-signin col-md-6 offset-md-3 col-12' }) do |form| %>

  <div class="form-group">
    <%= form.label :username %>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">â‡—</div>
      </div>
      <%= form.text_field :username, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>


  <%= submit_tag "Log In", :class => "btn btn-lg btn-info btn-block" %>

<% end %>

