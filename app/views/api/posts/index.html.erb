<div class="jumbotron"><h1>Welcome to TechQuest</h1></div>

<div>
    <% if current_user %>
    <%= link_to "Logout", api_session_path, method: :delete %>
    <% else %>
    <%= link_to "Login", api_session_path, method: :post %>
    <% end %>
</div>
<div>
    <%= link_to "Register Account", new_api_user_path %>
</div>

<%= link_to 'Ask a new question', api_posts_path %>

<div>
  <div class='form-signin col-md-6 offset-md-3'>
  <% @posts.each do |post| %>
   
        <div class="form-group"><%= post.question %></div>
        <div class="form-group"><%= post.body %></div>
        <div class="form-group"><%= post.user_id %> </div>
        <div class="form-group"><%= link_to 'Show', api_post_path %></div>
    
  <% end %>
  </div>
</div>