<div class="jumbotron"><h1>Welcome to Forum</h1></div>

<div>
    <% if !current_user %>
    <div><%= link_to "Login", new_api_session_path %></div>
    <div><%= link_to "Register Account", new_api_user_path %></div>
    <% else %>
    <%= link_to "Log Out", api_session_path, method: :delete %>
    <% end %>
</div>


<%= link_to 'Ask a new question', new_api_post_path %>
<%= flash[:notice] %>
<div>
  
  <% @posts.each do |post| %>
   <div class="card border-secondary text-center" style="width: 30rem;">
        <div class="card-body">
          <h3 class="card-title">
          <%= post.question %>
          </h3>
        </div>
          <p class="card-text">
          <%= post.body %>
          </p>
          <p class="card-text">
          <%=  post.user_id %>
          </p>
          <p class="card-text">
          <%= link_to 'Show', api_post_path(post) %>
          </p>

      <% end %>
      </div>
  </div>
</div>