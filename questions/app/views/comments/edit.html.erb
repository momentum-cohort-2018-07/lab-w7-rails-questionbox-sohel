<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="localhost:3000">QuestionBox</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="localhost:3000">Home</a></li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <% if !current_user %>
      <li><%= link_to "Login", new_session_path %> </li>
      <li><%= link_to "Register Account", new_user_path %></li>
      <% else %>
      <li><%= link_to "Log Out", session_path, method: :delete %></li>
      <% end %>
    </ul>
  </div>
</nav>

<h1 class='col-md-6 offset-md-3 pb-3'>Edit Your Reply</h1>

<div class='form-signin col-md-6 offset-md-3'>
        <%= form_with url: post_comment_path(@post, @comment), method: :patch, local:true do |form| %>
           
           <div class="form-group"> 
            <%= form.label :body %>
            <%= form.text_area :body, :class => "form-control-lg" %>
            </div>
            <div class="form-group">
            
            <%= form.hidden_field :user_id, :value =>current_user.id %>
            <%= form.hidden_field :post_id, :value => @post.id %>
            </div>
            
            <%= form.submit %>
        <% end %>
</div>
<div>
<%= link_to 'Go Back', post_path(id:@post.id), method: :get %>