<nav class="navbar navbar-inverse jumbotron" style="background-color: #F4F7F5;>
  <div class="container-fluid">
    <div class="navbar-header">
      <div class ="display-1"><%= link_to 'QuestionBox', posts_path, class: "questionbox" %>
      </div>
    </div>

    <ul class="nav navbar-nav navbar-right p-3">
      <% if !current_user %>
        <li class="pb-2"><%= link_to "Login", new_session_path %> </li>
        <li class="pb-2"><%= link_to "Register Account", new_user_path %></li>
        <li class="pb-2"><%= link_to 'Search Posts', search_index_path %></li>
      <% else %>
        <li class="pb-2"><%=link_to current_user.username.capitalize, user_path(id:current_user.id)  %></li>
        <li class="pb-2"><%= link_to "Log Out", session_path, method: :delete %></li>
        <li class="pb-2"><%= link_to 'Search Posts', search_index_path %></li>
        <li class="pb=2"><% if current_user %> 
                        <%= link_to 'Post a Question', new_post_path %>	
                      <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
<div>
<%= paginate @posts %> 
<%= page_entries_info @posts %>
</div>
<div>
<% if notice %>
  <p class="alert alert-info mt-4" role="alert"><%= notice %></p>
<% end %>
</div>

<div>
  <% @posts.each do |post| %>
    <div class="card border-secondary text-center" style="width: 30rem;">
      <div class="card-body">
          <h3 class="card-title">
            <%= link_to post.question, post_path(post) %>
          </h3>
      </div>
        <p class="card-text">
          <%= Redcarpet::Markdown.new(Redcarpet::Render::HTML).render(post.body).html_safe %>
        </p>
        <br>
        <p class="card-text">
          Posted By: <%= link_to User.find(post.user_id).username.capitalize, user_path(id: post.user_id)  %>
          <br>
          Posted On: <%= post.created_at.strftime("%B %d %Y, %l:%M%P") %>
          <br>
          Number of comments: <%= link_to post.comments.count, post_path(post) %>
          <br>
          <br>
          
        </p>
  <% end %>
        
    </div>
</div>